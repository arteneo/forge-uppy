{
    "compilerOptions": {
        "baseUrl": ".",
        "module": "CommonJS",
        "target": "ES6",
        "lib": ["es6", "dom", "es2017"],
        "declaration": true,
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "./dist",
        "jsx": "react",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "noImplicitAny": false,
        "strict": true,
        "types": ["node"]
    },
    "include": ["src/**/*"]
}
